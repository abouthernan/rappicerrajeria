---
import { IoCallOutline } from "react-icons/io5/index.js"
---

<article>
  <div class="overlay">
    <h3>¡Llegamos en <span>15 Minutos</span>!</h3>
    <div class="contact">
      <IoCallOutline />
      <a href="#" class="button">¡Pide tu servicio ahora!</a>
    </div>
  </div>
</article>

<style>
  article {
    background-color: var(--morado-oscuro);
    background-image: url('/hero-one.webp');
    background-size: cover;
    background-repeat: no-repeat;
    width: 100%;
    height: 30rem;
    margin: 0;
    padding: 0;
  }

  .overlay {
    background: linear-gradient(90deg, var(--morado-oscuro) 0%, rgba(0, 0, 0, 0) 100%);
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  h3 {
    margin: 0;
    font-size: 3rem;
    font-weight: var(--font-normal);
    color: var(--blanco);
    text-shadow: 0 0 1rem rgba(0, 0, 0, 0.1);
  }

  span {
    font-weight: var(--font-md);
  }

  .contact {
    display: flex;
    width: 100%;
    flex-direction: column;
    align-items: center;
  }

  :global(.contact svg) {
    width: 6rem;
    height: 6rem;
    margin: 2rem;
  }

  :global(.contact svg path) {
    stroke: var(--blanco);
  }

  a {
    color: var(--negro);
    background: var(--naranja-claro);
  }

  a:hover {
    background: var(--morado-claro);
    color: var(--blanco);
  }

</style>
