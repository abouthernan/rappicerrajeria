---
export interface Props {
  route: string;
}

import { IoPhonePortraitOutline, IoHomeOutline } from 'react-icons/io5/index.js'
import { Burger } from '../components/Burger.jsx'

const { route } = Astro.props
const path = route === 'servicios' ? '/' : ''
---

<header class="header">

  <a href="/" class="logo">
    <img class="logo__img" src={`${path}logo.webp`} alt="puede ser una imagen del logo de rappicerrajería">
  </a>

  <nav class="nav">
    <a href="/" class="nav__url">Inicio</a>
    <a href={`${path}servicios/puertas-de-seguridad`} class="nav__url">Puertas de seguridad</a>
    <a href={`${path}servicios/apertura-cerraduras`} class="nav__url">Apertura de cerraduras - Cambio de guardas</a>
    <a href={`${path}servicios/apertura-de-autos`} class="nav__url">Apertura de autos</a>
    <a href={`${path}servicios/apertura-de-puertas-brazos-hidraulicos`} class="nav__url">Apertura de puertas - Brazos hidráulicos</a>
    <a href={`${path}servicios/venta-y-suministro`} class="nav__url">Venta y suministro</a>
    <a href={`${path}servicios/instalacion-y-mantenimiento`} class="nav__url">Instalación y mantenimiento</a>
  </nav> 

  <ul class="contacts">
    <li>
      <a href="/">
        <IoHomeOutline/>
        Inicio 
      </a>
    </li>
    <li>
      <a href="tel:573142902212">
        <IoPhonePortraitOutline/>
        Bogotá: 3142902212
      </a>
    </li>
    <li>
      <a href="tel:573212258228">
        <IoPhonePortraitOutline/>
        Aledaños: 3212258228
      </a>
    </li>
  </ul>

  <Burger client:load/>

</header>

<style>
  .header {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    height: 8rem;
  }

  .logo {
    height: 4.5rem;
    max-width: 18.5rem;
  }

  .logo__img {
    height: 100%;
    width: 100%;
  }

  .contacts {
    display: none;
  }

  .nav {
    position: absolute;
    background: var(--morado-oscuro);
    transform: translateY(-100%);
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    transition: transform 0.3s ease-in-out;
    z-index: 2;
    padding: 0 2rem;
    gap: 1.5rem;
    text-align: center;
  }

  :has(.burger.active) nav {
    transform: translateY(0);
  }

  :has(.burger.active) html {
    overflow-y: hidden;
  }

  .nav__url {
    color: var(--amarillo);
    font-size: 1.8rem;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .nav__url:hover {
    color: var(--amarillo);
    opacity: 0.8;
  }

  @media (min-width: 768px) {

    .logo {
      height: 6rem;
      max-width: unset;
    }
  
    .nav {
      display: none;
    }

    :global(.burger) {
      display: none;
    }

    .contacts {
      display: flex;
      gap: 3rem;
      list-style: none;
    }

    .contacts a {
      color: var(--negro);
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      gap: .5rem;
    }

    .contacts a:hover {
      color: var(--naranja-claro);
    }

    :global(.contacts a svg) {
      font-size: 2rem;
      color: var(--naranja-claro);
    }

  }

</style>
