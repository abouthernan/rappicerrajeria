---
import { IoPhonePortraitOutline } from 'react-icons/io5/index.js'
import { Burger } from '../components/Burger.jsx'
---

<header class="header">

  <div class="logo">
    <img class="logo__img" src="logo.png" alt="puede ser una imagen del logo de rappicerrajería">
  </div>

  <nav class="nav">
    <a class="nav__url">Servicios</a>
  </nav> 

  <ul class="contacts">
    <li>
      <a href="#">
        <IoPhonePortraitOutline/>
        Bogotá: 3142902212
      </a>
    </li>
    <li>
      <a href="#">
        <IoPhonePortraitOutline/>
        Aledaños: 3212258228
      </a>
    </li>
  </ul>

  <Burger client:load/>

</header>

<style>
  .header {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
  }

  .logo {
    height: 6rem;
  }

  .logo__img {
    height: 100%;
    width: 100%;
  }

  .contacts {
    display: none;
  }

  .nav {
    position: absolute;
    background: var(--morado-oscuro);
    transform: translateY(-100%);
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    transition: transform 0.3s ease-in-out;
    z-index: 2;
  }

  :has(.burger.active) nav {
    transform: translateY(0);
  }

  :has(.burger.active) html {
    overflow-y: hidden;
  }

  .nav__url {
    color: var(--amarillo);
    font-size: 2rem;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .nav__url:hover {
    color: var(--amarillo);
    opacity: 0.8;
  }

  @media (min-width: 768px) {
  
    .nav {
      display: none;
    }

    :global(.burger) {
      display: none;
    }

    .contacts {
      display: flex;
      gap: 3rem;
      list-style: none;
    }

    .contacts a {
      color: var(--negro);
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      gap: .5rem;
    }

    .contacts a:hover {
      color: var(--naranja-claro);
    }

    :global(.contacts a svg) {
      font-size: 2rem;
      color: var(--naranja-claro);
    }

  }

</style>
