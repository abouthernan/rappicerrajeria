---
import partners from '../../public/data/partners.json'
---

<article>
  <h2>Trabajamos con los mejores</h2>
  <div class="content">
    {
      partners.map(({ id, image, alt}) => (
        <div class="item" key={id}>
          <img src={image} alt={alt}>
        </div>
      ))
    }
  </div>
</article>

<style>

  article {
    max-width: 120rem;
    margin: 0 auto;
  }

  .content {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    padding: var(--espacio) 0;
    padding-top: 0;
  }

  .item {
    width: 20rem;
    height: 8rem;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .item img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

</style>
