---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import ContactButton from "../components/button/ContactButton.astro";
---

<Layout title="Rappicerrajería - Página no encontrada">
  <Header route="main" />
  <main>
    <img src="404.gif" alt="puede ser una imagen animada con los números 404">
    <p>La página que buscas no existe</p>
    <a href="/" class="button">Ir atrás</a>
  </main>
  <ContactButton zone="bogota" route="main" />
  <Footer />
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: calc(100vh - 15.5rem);
    margin-top: -3rem;
  }

  img {
    width: 100%;
    max-width: 200px;
  }

  p {
    font-size: 2rem;
    font-weight: 400;
    margin: 0;
  }

  a {
    background-color: var(--morado-claro);
    color: var(--blanco);
    margin: 2rem 0;
  }

  @media (min-width: 768px) {
    img {
      max-width: 400px;
    }
  }

</style>
