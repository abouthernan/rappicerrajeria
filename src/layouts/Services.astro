---
import '../styles/globals.css'
import Metatags from '../components/Metatags.astro';
import Header from '../components/Header.astro';
import Button from '../components/Button.astro';
import { Gallery } from '../components/Gallery';
import Zones from '../components/Zones.astro';
import Payments from '../components/Payments.astro';
import Partners from '../components/Partners.astro';
import Clients from '../components/Clients.astro';
import Footer from '../components/Footer.astro';
import Content from '../components/Content.astro';
import ContactButton from '../components/button/ContactButton.astro';

export interface Props {
  content: {
    title: string;
    route: string;
  }
}

const {
  content: { title, route }
} = Astro.props

---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Rappicerrajería - {title}</title>
    <link rel="icon" href="/favicon-32x32.png" sizes="32x32">
    <link rel="icon" href="/favicon-192x192.png" sizes="192x192">
    <link rel="apple-touch-icon-precomposed" href="/favicon-180x180.png">
    <Metatags route={route} />
    <!-- ANALITYCS -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-49465114-15"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-49465114-15');
    </script>
    <!-- ADS -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=AW-737594446"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'AW-737594446');
    </script>
	</head>
	<body>
    <Header route={route}/>
    <main>
      <span>Servicio</span>
      <Content>
      <h1>{title}</h1>
        <slot/>
      </Content>
      <Button url="#" placeholder="¡Llama ahora!" />
      <Gallery client:load route={route} />
    </main>
    <Zones route={route}/>
    <Payments />
    <div class="grid">
      <Partners route={route} />
      <Clients route={route} />
    </div>
    <ContactButton zone="bogota" route={route} />
    <Footer />
	</body>
</html>

<style>
  html {
    overflow-x: hidden;
  }

  main {
    display: flex;
    margin-top: 4rem;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 0 2rem;
    background: hsla(0, 0%, 100%, 1);
    background: linear-gradient(270deg, hsla(0, 0%, 100%, 1) 0%, hsla(20, 30%, 86%, 1) 100%);
    background: -moz-linear-gradient(270deg, hsla(0, 0%, 100%, 1) 0%, hsla(20, 30%, 86%, 1) 100%);
    background: -webkit-linear-gradient(270deg, hsla(0, 0%, 100%, 1) 0%, hsla(20, 30%, 86%, 1) 100%);
    filter: progid: DXImageTransform.Microsoft.gradient( startColorstr="#FFFFFF", endColorstr="#F8F4F2", GradientType=1 );
  }

